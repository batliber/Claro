<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>ClaroWEB</display-name>
  <welcome-file-list>
    <welcome-file>main.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>uy.com.amensg.claro.servlets.DownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/Download</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>StreamingServlet</servlet-name>
    <servlet-class>uy.com.amensg.claro.servlets.StreamingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StreamingServlet</servlet-name>
    <url-pattern>/Stream</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>SeguridadFilter</filter-name>
    <filter-class>uy.com.amensg.claro.filters.SeguridadFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SeguridadFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>UploadServlet</servlet-name>
    <servlet-class>uy.com.amensg.claro.servlets.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/Upload</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>
  <listener>
    <listener-class>uy.com.amensg.claro.listeners.SessionExpirationListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>dwr-invoker</servlet-name>
    <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
    <init-param>
      <param-name>debug</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>classes</param-name>
      <param-value>
      	uy.com.amensg.claro.dwr.ClaroInterfaceContratoDWR,
      	uy.com.amensg.claro.dwr.ClaroInterfaceEstadoDWR,
      	uy.com.amensg.claro.dwr.ConfigurationDWR,
      	uy.com.amensg.claro.dwr.EmpresaDWR,
      	uy.com.amensg.claro.dwr.FileManagerDWR,
      	uy.com.amensg.claro.dwr.MenuDWR,
      	uy.com.amensg.claro.dwr.MetadataConsultaDWR,
      	uy.com.amensg.claro.dwr.RolDWR,
      	uy.com.amensg.claro.dwr.SeguridadDWR,
      	uy.com.amensg.claro.dwr.UsuarioDWR,
      	uy.com.amensg.claro.dwr.UsuarioRolEmpresaDWR,
      	
      	uy.com.amensg.claro.entities.ArchivoTO,
      	uy.com.amensg.claro.entities.ClaroInterfaceContratoTO,
      	uy.com.amensg.claro.entities.ClaroInterfaceEstadoTO,
      	uy.com.amensg.claro.entities.EmpresaTO,
      	uy.com.amensg.claro.entities.MenuTO,
      	uy.com.amensg.claro.entities.MetadataCondicionTO,
      	uy.com.amensg.claro.entities.MetadataConsultaTO,
      	uy.com.amensg.claro.entities.MetadataConsultaResultadoTO,
      	uy.com.amensg.claro.entities.MetadataOrdenacionTO,
      	uy.com.amensg.claro.entities.RolTO,
      	uy.com.amensg.claro.entities.UsuarioTO,
      	uy.com.amensg.claro.entities.UsuarioRolEmpresaTO
      </param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>dwr-invoker</servlet-name>
    <url-pattern>/dwr/*</url-pattern>
  </servlet-mapping>
</web-app>